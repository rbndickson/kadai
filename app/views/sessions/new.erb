<h1>ログイン</h1>

<%= form_tag("/login", method: "POST", class: "login-form") do %>
  <fieldset>
    <div>
      <%= label_tag(:username, "ユーザーID") %>
      <%= text_field_tag(:username) %>
    </div>
    <div>
      <%= label_tag(:password, "パスワード") %>
      <%= password_field_tag(:password) %>
    </div>
    <%= submit_tag("ログインする") %>
  </fieldset>
<% end %>