<h1>ログイン</h1>

<% if flash %>
  <ul>
    <% flash.each do |name, message| %>
      <li class="error-message">
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_tag("/login", method: "POST", class: "form") do %>
  <div>
    <%= label_tag(:username, "ユーザーID") %>
    <%= text_field_tag(:username) %>
  </div>
  <div>
    <%= label_tag(:password, "パスワード") %>
    <%= password_field_tag(:password) %>
  </div>
  <div>
    <%= submit_tag("ログインする") %>
  </div>
<% end %>